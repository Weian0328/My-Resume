<h1>會員註冊</h1>

<% if @user.errors.any? %>
<ul>
    <% @user.errors.full_messages. each do |message| %>
        <li><%= message %></li>
    <% end %>
</ul>
<% end %>

<%= form_with(model: @user) do |form| %>

    <div class="field">
        <%= form.label :email %>
        <%= form.email_field :email %>
    </div>

    <div class="field">
        <%= form.label :username %>
        <%= form.text_field :username %>
    </div>

    <div class="field">
        <%= form.label :密碼 %>
        <%= form.password_field :password %>
    </div>

    <div class="field">
        <%= form.label :確認密碼 %>
        <%= form.password_field :password_confirmation %>
    </div>
     
     <%= form.submit "註冊"%>

<% end %>